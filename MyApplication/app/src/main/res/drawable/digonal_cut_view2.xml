<?xml version="1.0" encoding="utf-8"?>
<layer-list

    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorPrimary"

        />

    <item>
        <bitmap android:src="@drawable/bg" android:gravity="center" android:alpha="0.1"
            />

    </item>

    <item android:top="550dp"
        android:bottom="-400dp"
        android:left="0dp"
        android:gravity="bottom"
        android:right="-0dp">
        <rotate
            android:fromDegrees="-50"
            android:pivotX="10%"
            android:pivotY="10%">
            <shape
                android:shape="rectangle"

                >
                <solid
                    android:color="#80DEEA"/>
            </shape>
        </rotate>
    </item>

    <item android:top="10dp"
        android:bottom="-60dp"
        android:left="0dp"
        android:gravity="bottom"
        android:right="-0dp">

        <rotate
            android:fromDegrees="-100"
            android:pivotX="40%"
            android:pivotY="60%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/accent" />
            </shape>
        </rotate>
    </item>

    <item android:top="100dp"
        android:bottom="-40dp"
        android:left="140dp"
        android:gravity="bottom"
        android:right="-70dp">
        <rotate
            android:fromDegrees="-170"
            android:pivotX="40%"
            android:toDegrees="10"
            android:pivotY="60%">
            <shape
                android:shape="rectangle">
                <solid
           android:color="@color/secondary_text"/>
            </shape>
        </rotate>
    </item>

    <item android:top="100dp"
        android:bottom="-40dp"
        android:left="0dp"
        android:gravity="bottom"
        android:right="-90dp">
        <rotate
            android:fromDegrees="-60"
            android:pivotX="90%"
            android:pivotY="60%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#D4E157" />
            </shape>
        </rotate>
    </item>

    <item android:top="198dp"
        android:bottom="-40dp"
        android:left="80dp"
        android:gravity="center_horizontal"
        android:right="-0dp">
        <rotate
            android:fromDegrees="-150"
            android:pivotX="40%"
            android:toDegrees="10"
            android:pivotY="60%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#80CBC4"/>
            </shape>
        </rotate>
    </item>

    <item android:top="400dp"
        android:bottom="-200dp"
        android:left="90dp"
        android:gravity="bottom"
        android:right="-20dp">
        <rotate
            android:fromDegrees="-140"
            android:pivotX="40%"
            android:toDegrees="0"
            android:pivotY="40%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#9E9E9E"/>
            </shape>
        </rotate>
    </item>

    <item android:top="480dp"
        android:bottom="-200dp"
        android:left="90dp"
        android:gravity="bottom"
        android:right="-20dp">
        <rotate
            android:fromDegrees="-120"
            android:pivotX="40%"
            android:toDegrees="0"
            android:pivotY="40%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#4DB6AC" />
            </shape>
        </rotate>
    </item>

</layer-list>