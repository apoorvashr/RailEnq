<?xml version="1.0" encoding="utf-8"?>
<layer-list

    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/colorPrimary" />

    <item android:top="120dp"
        android:bottom="310dp"
        android:left="90dp"
        android:gravity="center"
        android:right="110dp">
        <rotate
            android:fromDegrees="0"
            android:pivotX="10%"
            android:pivotY="10%">
            <shape
                android:shape="oval"

                >
                <solid
                    android:color="#80DEEA"/>
            </shape>
        </rotate>
    </item>

    <item android:top="300dp"
        android:bottom="300dp"
        android:left="130dp"
        android:gravity="center_vertical"
        android:right="150dp">

        <rotate
            android:fromDegrees="0"
            android:pivotX="90%"
            android:pivotY="90%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#D4E157" />
            </shape>

            <shape
                android:shape="rectangle">
                <solid
                    android:color="#D4E157" />

                <corners
                    android:bottomLeftRadius="8dp"
                    android:bottomRightRadius="8dp"
                    android:topLeftRadius="8dp"
                    android:topRightRadius="8dp" />
            </shape>
        </rotate>

        <rotate
            android:fromDegrees="0"
            android:pivotX="90%"
            android:pivotY="90%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="#D4E157" />
            </shape>

            <shape
                android:shape="rectangle">
                <solid
                    android:color="#D4E157" />

                <corners
                    android:bottomLeftRadius="8dp"
                    android:bottomRightRadius="8dp"
                    android:topLeftRadius="8dp"
                    android:topRightRadius="8dp" />
            </shape>
        </rotate>

    </item>

</layer-list>