<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#B0BEC5</item>
        <item name="colorPrimaryDark">#B0BEC5</item>
        <item name="colorAccent">#CFD8DC</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TitleBadgeTitle" parent="AppTheme">
        <item name="android:textColor">#fff</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="cardbackgrund_main_card" parent="AppTheme" >

        <item name="android:background">#03A9F4</item>

    </style>


    <style name="ButtonStyle" parent="Base.Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorAccent</item>
    </style>


    <style name="NoTitleDialog" parent="Theme.AppCompat.Dialog">
        <item name="windowNoTitle">true</item>
    </style>

</resources>
